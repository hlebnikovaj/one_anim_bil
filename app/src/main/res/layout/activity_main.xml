<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/field"
        android:layout_width="352dp"
        android:layout_height="654dp"
        android:background="@drawable/shape_field"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <ImageView
        android:id="@+id/shar1"
        android:layout_width="47dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/shape_luza" />

    <ImageView
        android:id="@+id/shar2"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/shape_luza"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:srcCompat="@drawable/shape_luza" />

    <ImageView
        android:id="@+id/lua1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/shape_shar" />

    <ImageView
        android:id="@+id/luza2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/shape_shar" />

    <ImageView
        android:id="@+id/luza3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shape_shar" />

    <ImageView
        android:id="@+id/luza4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/field"
        app:layout_constraintEnd_toEndOf="@+id/field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/field"
        app:layout_constraintTop_toTopOf="@+id/field"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shape_shar" />

</androidx.constraintlayout.motion.widget.MotionLayout>