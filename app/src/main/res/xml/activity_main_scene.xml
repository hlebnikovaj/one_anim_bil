<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@id/shar2"
            motion:clickAction="toggle" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end"
        android:layout_width="47dp"
        android:layout_height="47dp"

        >

        <Constraint
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:id="@+id/shar2"
            motion:layout_constraintStart_toEndOf="@+id/field"
            motion:layout_constraintEnd_toEndOf="@+id/field"
            motion:layout_constraintStart_toStartOf="@+id/field"
            motion:layout_constraintHorizontal_bias="0.245"
            motion:layout_constraintTop_toBottomOf="@+id/shar1" />
        <Constraint
            motion:layout_constraintVertical_bias="0.494"
            android:layout_height="654dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.484"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="352dp"
            android:id="@+id/field" />
        <Constraint
            android:layout_height="47dp"
            motion:layout_constraintStart_toStartOf="@+id/field"
            motion:layout_constraintBottom_toBottomOf="@+id/field"
            motion:layout_constraintHorizontal_bias="0.042"
            motion:layout_constraintEnd_toEndOf="@+id/field"
            android:layout_width="47dp"
            android:id="@+id/shar1"
            android:layout_marginBottom="604dp" />
    </ConstraintSet>
</MotionScene>